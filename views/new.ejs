<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">New Blog</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/blog" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="title"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <h3 style="text-align: center;">Blog Content</h3>
                    <textarea name="blog[body]"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <!--<a href="/campgrounds">Go Back</a>-->
        </div>
    </div>
</div>

<% include ./partials/footer %>